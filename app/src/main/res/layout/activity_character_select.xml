<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/defaultBackgroundColor"
    tools:context="itson.mx.simplephone.CharacterSelect">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_choose_character"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="55sp"
        android:singleLine="false"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/luis"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/ana"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnLuis"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="10dp"
        fancy:fb_defaultColor="@color/selectCharacterButton"
        fancy:fb_focusColor="#9bd823"
        fancy:fb_radius="150dp"
        fancy:fb_textFont=".bold"
        fancy:fb_textSize="55sp"
        fancy:fb_text="@string/character_name_luis"
        fancy:fb_textColor="#FFFFFF"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnAna"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="10dp"
        fancy:fb_defaultColor="@color/selectCharacterButton"
        fancy:fb_focusColor="#9bd823"
        fancy:fb_radius="150dp"
        fancy:fb_textFont=".bold"
        fancy:fb_textSize="55sp"
        fancy:fb_text="@string/character_name_ana"
        fancy:fb_textColor="#FFFFFF"
        android:layout_alignTop="@+id/btnLuis"
        android:layout_alignEnd="@+id/imageView3" />
</RelativeLayout>
